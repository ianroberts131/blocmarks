<div class='row'>
  <div class='col-md-8'>
    <div>
      <h1><%= @topic.title %></h1>
      <% if current_user == @topic.user %>
          <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger' %>
          <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-primary' %>
          <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
      <% end %>
    </div> 
    <div class="bookmarks">
      <ul style="list-style-type:none">
        <% @topic.bookmarks.each do |bookmark| %>
          <li><%= link_to "#{bookmark.url}", bookmark.url %>
              <% if current_user == @topic.user %>
                | <%= link_to "Edit", edit_topic_bookmark_path(@topic, bookmark) %>
                | <%= link_to "Delete", [@topic, bookmark], method: :delete %>
              <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>



