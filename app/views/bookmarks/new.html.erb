<h1>New Bookmark</h1>
<div class='row'>
  <div class='col-md-6'>
    <%= form_for [@topic, @bookmark] do |f| %>
      <div class='form-group'>
        <%= f.text_field :url, class: 'form-control', placeholder: 'Enter bookmark url' %>
      </div>  
        <%= f.submit "Add Bookmark", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

